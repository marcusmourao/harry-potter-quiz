{
  "name": "nuxt-template",
  "version": "1.0.0",
  "description": "My cool Nuxt.js project",
  "author": "Marcus Mour√£o <marcusmmourao@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development ENVIRONMENT=dev HOST=0.0.0.0 nuxt",
    "dev-container": "npm install && npm run dev",
    "build-prod": "NODE_ENV=production ENVIRONMENT=prod npm run build",
    "build": "nuxt build",
    "start-prod": "NODE_ENV=production ENVIRONMENT=prod npm run start",
    "start": "HOST=0.0.0.0 nuxt start",
    "generate": "ENVIRONMENT=prod nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --ignore-path .eslintignore .",
    "lint-checkstyle": "eslint --ext .js,.vue --ignore-path .gitignore --ignore-path .eslintignore -o reports/style/eslint.xml -f checkstyle .",
    "precommit": "npm run lint",
    "test-local": "ENVIRONMENT=dev mocha-webpack --webpack-config test/webpack-test.config.js --require test/setup.js --ui bdd ./test/unit --recursive",
    "test": "ENVIRONMENT=dev mocha-webpack --webpack-config test/webpack-test.config.js --require test/setup.js --ui bdd --reporter mocha-junit-reporter --reporter-options mochaFile=./reports/TEST_result.xml ./test/unit --recursive",
    "lintfix": "eslint --fix --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "moment": "^2.23.0",
    "node-sass": "^4.11.0",
    "nuxt": "^2.4.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "vue": "^2.6.3",
    "vue-i18n": "^8.1.0",
    "vue-loader": "^15.5.1",
    "vue-style-loader": "^4.1.2",
    "vuex": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel-eslint": "^8.2.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.0.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-standard": ">=12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": ">=21.24.1",
    "eslint-plugin-node": ">=7.0.1",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^5.0.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jsdom": "^13.1.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.17.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.3.0",
    "path": "^0.12.7",
    "sinon": "^7.2.2"
  }
}
